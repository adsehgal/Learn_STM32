/* USER CODE BEGIN 0 */
FATFS fs; // file system
FIL fil; //file
FRESULT fresult; //to store data from each operation
char buffer[1024];

UINT br, wr;	//hold count of rd and wr

//variables for capacity
FATFS *pfs;
DWORD fre_clust;
uint32_t total, free_space;



